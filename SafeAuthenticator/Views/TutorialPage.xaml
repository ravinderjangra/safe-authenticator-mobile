<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             xmlns:viewModels="clr-namespace:SafeAuthenticator.ViewModels"
             xmlns:controls="clr-namespace:SafeAuthenticator.Controls;assembly=SafeAuthenticator"
             x:Class="SafeAuthenticator.Views.TutorialPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewModels:TutorialViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackLayout BackgroundColor="{StaticResource LightBackgroundColor}">
                <cv:CarouselViewControl
                    ShowArrows="False"
                    ShowIndicators="False"
                    PositionSelectedCommand="{Binding CarouselPageChangeCommand}"
                    Position="{Binding CarouselPagePosition}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <cv:CarouselViewControl.ItemsSource>
                        <x:Array Type="{x:Type View}">

                            <!-- Tutorial Page1 -->
                            <Grid Padding="30, 0, 30, 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <Image Source="tutorial0"
                                       Aspect="AspectFit" />

                                <Label Grid.Row="1"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"
                                       FontSize="16">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="The " />
                                            <Span Text="SAFE Authenticator " FontAttributes="Bold" FontSize="16"/>
                                            <Span
                                                Text="enables users to securely authenticate themselves onto the SAFE Network and protects network login credentials from apps" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>


                            <!-- Tutorial Page2 -->
                            <Grid RowSpacing="0"
                                  Padding="30, 0, 30, 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>

                                <StackLayout Spacing="5"
                                             VerticalOptions="End"
                                             Margin="0, 20"
                                             HorizontalOptions="CenterAndExpand">
                                    <Label HorizontalTextAlignment="Center"
                                           Text="Manage authorisation requests"
                                           FontSize="18"
                                           FontAttributes="Bold" />

                                    <Label HorizontalTextAlignment="Center"
                                           Text="Review and grant permissions to apps"
                                           FontSize="16" />

                                </StackLayout>

                                <Image Source="tutorial1"
                                       Grid.Row="1"
                                       HorizontalOptions="Center"
                                       Margin="20, 0"
                                       VerticalOptions="End"
                                       Aspect="AspectFit" />
                            </Grid>


                            <!-- Tutorial Page3 -->
                            <Grid RowSpacing="0"
                                  Padding="30, 0, 30, 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>

                                <StackLayout Spacing="5"
                                             VerticalOptions="End"
                                             Margin="0, 20"
                                             HorizontalOptions="CenterAndExpand">
                                    <Label HorizontalTextAlignment="Center"
                                           Text="Manage authorisation requests"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center" />

                                    <Label HorizontalTextAlignment="Center"
                                           Text="View all authorised apps and their permissions"
                                           FontSize="16" />
                                </StackLayout>

                                <Image Source="tutorial2"
                                       Grid.Row="1"
                                       Margin="20, 0"
                                       HorizontalOptions="Center"
                                       VerticalOptions="End"
                                       Aspect="AspectFit" />
                            </Grid>

                        </x:Array>
                    </cv:CarouselViewControl.ItemsSource>
                </cv:CarouselViewControl>
            </StackLayout>

            <StackLayout Grid.Row="1"
                         Padding="0,0,0,25">

                <StackLayout.BackgroundColor>
                    <OnPlatform x:TypeArguments="Color">
                        <On Platform="iOS" Value="#F1F1F1" />
                        <On Platform="Android" Value="White" />
                    </OnPlatform>
                </StackLayout.BackgroundColor>

                <StackLayout.Triggers>
                    <DataTrigger TargetType="StackLayout"
                                 Binding="{Binding CarouselPagePosition}"
                                 Value="0">
                        <Setter Property="BackgroundColor"
                                Value="White" />
                    </DataTrigger>
                </StackLayout.Triggers>

                <controls:GradientContentView StartColor="#F1F1F1"
                                              EndColor="White">
                    <StackLayout BackgroundColor="Transparent"
                                 HeightRequest="20"
                                 HorizontalOptions="FillAndExpand" />

                    <controls:GradientContentView.Triggers>
                        <DataTrigger TargetType="controls:GradientContentView"
                                     Binding="{Binding CarouselPagePosition}"
                                     Value="0">
                            <Setter Property="Opacity"
                                    Value="0" />
                        </DataTrigger>
                    </controls:GradientContentView.Triggers>
                </controls:GradientContentView>

                <Button Text="{Binding SecondaryButtonText}"
                        Command="{Binding  SecondaryButtonCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        Margin="25, 0"
                        HorizontalOptions="Center"
                        VerticalOptions="EndAndExpand" />

                <Button Text="{Binding PrimaryButtonText}"
                        Command="{Binding  PrimaryButtonCommand}"
                        Margin="25, 0"
                        VerticalOptions="End" />
            </StackLayout>

        </Grid>

    </ContentPage.Content>
</ContentPage>
