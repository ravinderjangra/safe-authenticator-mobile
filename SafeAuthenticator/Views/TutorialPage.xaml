<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             xmlns:viewModels="clr-namespace:SafeAuthenticator.ViewModels"
             x:Class="SafeAuthenticator.Views.TutorialPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewModels:TutorialViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackLayout BackgroundColor="{StaticResource LightBackgroundColor}" Padding="25, 25, 25, 0">
                <cv:CarouselViewControl 
                    ShowArrows="False"
                    ShowIndicators="False"
                    PositionSelectedCommand="{Binding CarouselPageChangeCommand}"
                    Position="{Binding CarouselPagePosition}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <cv:CarouselViewControl.ItemsSource>
                        <x:Array Type="{x:Type View}">

                            <!-- Tutorial Page1 -->
                            <StackLayout Spacing="20">
                                <StackLayout HorizontalOptions="CenterAndExpand" 
                                             VerticalOptions="CenterAndExpand">

                                    <Image Source="tutorial0"
                                           Aspect="AspectFit"/>
                                </StackLayout>
                            </StackLayout>


                            <!-- Tutorial Page2 -->
                            <StackLayout>
                                <StackLayout HorizontalOptions="CenterAndExpand" 
                                             VerticalOptions="CenterAndExpand">

                                    <Label Text="Manage authorisation requests"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"
                                           FontSize="18"/>

                                    <Label Text="Review and grant permissions to apps"  
                                           HorizontalTextAlignment="Center"
                                           Margin="0,5,0,0"
                                           FontSize="14"/>

                                    <Image Source="tutorial1"
                                           Margin="40,15,40,0"
                                           Aspect="AspectFit"/>
                                </StackLayout>
                            </StackLayout>


                            <!-- Tutorial Page3 -->
                            <StackLayout>
                                <StackLayout HorizontalOptions="CenterAndExpand" 
                                             VerticalOptions="CenterAndExpand">

                                    <Label Text="Manage authorisation requests"
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"                                           
                                           FontSize="18"/>

                                    <Label Text="View all authorised apps and their permissions" 
                                           HorizontalTextAlignment="Center"
                                           Margin="0,5,0,0"
                                           FontSize="14"/>

                                    <Image Source="tutorial2"
                                           Margin="40,15,40,0"
                                           Aspect="AspectFit"/>
                                </StackLayout>
                            </StackLayout>

                        </x:Array>
                    </cv:CarouselViewControl.ItemsSource>
                </cv:CarouselViewControl>
            </StackLayout>

            <StackLayout Grid.Row="1"
                         Padding="25,0,25,25" 
                         BackgroundColor="#fafafa">

                <Button Text="{Binding SecondaryButtonText}"
                            Command="{Binding  SecondaryButtonCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            Margin="0,20,0,0"
                            HorizontalOptions="Center"
                        VerticalOptions="EndAndExpand"/>
                
                <Button Text="{Binding PrimaryButtonText}" 
                        Command="{Binding  PrimaryButtonCommand}"
                        VerticalOptions="End"/>
                
                <StackLayout.Triggers>
                    <DataTrigger TargetType="StackLayout"
                                         Binding="{Binding CarouselPagePosition}"
                                         Value="0">
                        <Setter Property="BackgroundColor" 
                                Value="{StaticResource LightBackgroundColor}" />
                    </DataTrigger>
                </StackLayout.Triggers>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>