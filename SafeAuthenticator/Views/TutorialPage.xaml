<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             xmlns:viewModels="clr-namespace:SafeAuthenticator.ViewModels"
             x:Class="SafeAuthenticator.Views.TutorialPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewModels:TutorialViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackLayout BackgroundColor="{StaticResource LightBackgroundColor}" Padding="30, 0, 30, 0">
                <cv:CarouselViewControl 
                    ShowArrows="False"
                    ShowIndicators="False"
                    PositionSelectedCommand="{Binding CarouselPageChangeCommand}"
                    Position="{Binding CarouselPagePosition}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <cv:CarouselViewControl.ItemsSource>
                        <x:Array Type="{x:Type View}">

                            <!-- Tutorial Page1 -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <Image Source="tutorial0"
                                       Aspect="AspectFit"/>

                                <Label Grid.Row="1"
                                       Text="The Authenticator enables users to securely authenticate themselves onto the SAFE Network and protects network login credentials from apps"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"
                                       FontSize="16" />
                            </Grid>


                            <!-- Tutorial Page2 -->
                            <Grid RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>

                                <StackLayout Spacing="5" 
                                             VerticalOptions="End" 
                                             Margin="0, 20"
                                             HorizontalOptions="CenterAndExpand">
                                    <Label HorizontalTextAlignment="Center" 
                                           Text="Manage authorisation requests" 
                                           FontSize="18"
                                           FontAttributes="Bold" />
                                    
                                    <Label HorizontalTextAlignment="Center" 
                                           Text="Review and grant permissions to apps" 
                                           FontSize="16"/>

                                </StackLayout>

                                <Image Source="tutorial1"
                                       Grid.Row="1"
                                       HorizontalOptions="Center"
                                       Margin="20, 0"
                                       VerticalOptions="End"                                       
                                       Aspect="AspectFit"/>
                            </Grid>


                            <!-- Tutorial Page3 -->
                            <Grid RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>
                                
                                <StackLayout Spacing="5" 
                                             VerticalOptions="End" 
                                             Margin="0, 20"
                                             HorizontalOptions="CenterAndExpand">
                                    <Label HorizontalTextAlignment="Center" 
                                           Text="Manage authorisation requests" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                    
                                    <Label HorizontalTextAlignment="Center" 
                                           Text="View all authorised apps and their permissions" 
                                           FontSize="16"/>
                                </StackLayout>

                                <Image Source="tutorial2"
                                       Grid.Row="1" 
                                       Margin="20, 0"
                                       HorizontalOptions="Center"
                                       VerticalOptions="End"
                                       Aspect="AspectFit"/>
                            </Grid>

                        </x:Array>
                    </cv:CarouselViewControl.ItemsSource>
                </cv:CarouselViewControl>
            </StackLayout>

            <StackLayout Grid.Row="1"
                         Padding="25,0,25,25" 
                         BackgroundColor="#fafafa">

                <Button Text="{Binding SecondaryButtonText}"
                            Command="{Binding  SecondaryButtonCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            Margin="0,20,0,0"
                            HorizontalOptions="Center"
                        VerticalOptions="EndAndExpand"/>

                <Button Text="{Binding PrimaryButtonText}" 
                        Command="{Binding  PrimaryButtonCommand}"
                        VerticalOptions="End"/>

                <StackLayout.Triggers>
                    <DataTrigger TargetType="StackLayout"
                                         Binding="{Binding CarouselPagePosition}"
                                         Value="0">
                        <Setter Property="BackgroundColor" 
                                Value="{StaticResource LightBackgroundColor}" />
                    </DataTrigger>
                </StackLayout.Triggers>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>
